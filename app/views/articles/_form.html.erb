<%= render 'shared/errors', obj: @article %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :sender %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sender, class: "form-control", placeholder: "Sender of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :receiver %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :receiver, class: "form-control", placeholder: "Receiver of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :content %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Content of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Back to articles listing page", articles_path %> ]
    </div>  
  </div>
</div>

