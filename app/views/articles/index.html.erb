<% @articles.each do |article| %>
  <div class="row">
    <div class="col-xs-12 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to article.title, article_path(article), class: "article-title-font"%>
        </div>
        <div class="article-people">
          <strong>From: </strong><%= article.sender %>
          <span style="float: right"><strong>To: </strong><%= article.receiver %></span>
        </div>
        <div class="article-body">
          <%= truncate(article.content, length: 100) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-md btn-primary" %>
          <%= link_to "Delete this article", article_path(article), method: :delete, 
                                      data: { confirm: "Are you sure you want to delete the article?"}, 
                                      class: "btn btn-md btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</table>