<h1>Editing existing article</h1>

<% if @article.errors.any? %>
<h2>The following problem prevent this article to be created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :sender %><br/>
    <%= f.text_field :sender %>
  </p>
  <p>
    <%= f.label :receiver %><br/>
    <%= f.text_field :receiver %>
  </p>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>