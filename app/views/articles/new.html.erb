<h1>Create new articles</h1>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :sender %><br/>
    <%= f.text_field :sender %>
  </p>
  <p>
    <%= f.label :receiver %><br/>
    <%= f.text_field :receiver %>
  </p>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>